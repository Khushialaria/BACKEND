<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Available Pets</title>
    <!-- Add the Google Fonts link here -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <nav>
        <a href="/">Home</a> | <a href="/pet-listing">View Pets</a> | <a href="/adoption">Adopt a Pet</a> | <a href="/dashboard">Dashboard</a> |<a href="/chatbox">Chat</a> 
    </nav>

    <h1>Available Pets for Adoption</h1>

    <div class="pet-container">
        <% pets.forEach(pet => { %>
            <div class="pet-card">
                <img src="/images/<%= pet.name.toLowerCase() %>.jpg" alt="<%= pet.name %>">
                <h2><%= pet.name %></h2>
                <p>Type: <%= pet.type %></p>
                <a href="/adoption"><button>Adopt Now</button></a>
            </div>
        <% }) %>
    </div>
</body>
</html>
