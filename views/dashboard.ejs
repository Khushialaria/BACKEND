<!DOCTYPE html>
<html lang="en">
<head>
    <title>Dashboard</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <nav>
        <a href="/">Home</a> | <a href="/pet-listing">View Pets</a> | <a href="/adoption">Adopt a Pet</a> | <a href="/dashboard">Dashboard</a>
    </nav>

    <h1>Your Dashboard</h1>
    
    <div class="dashboard-container">
        <table class="dashboard-table">
            <tr>
                <th>Name</th>
                <th>Adopted Pet</th>
            </tr>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.pet %></td>
                </tr>
            <% }) %>
        </table>
    </div>
</body>
</html>
